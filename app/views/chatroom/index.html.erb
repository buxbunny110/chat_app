<%= render 'shared/header', content: 'Message me'  %>
<div class="ui two column grid stackable">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, url: chatroom_path, class: "ui reply form", remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Enter a message", id: "chat-input" %>
              <%= f.button '<i id="send-button" class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <%= render 'sidebar' %>
  </div>
</div>
